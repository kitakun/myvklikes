    .likers-table {
        border-collapse: collapse;
    }

        .likers-table th {
            border-bottom: 1px solid #d3d9de;
            padding-bottom: 20px;
        }

    .small-header {
        width: 50px;
        white-space: nowrap;
    }

    .user-header {
        height: 90%;
        text-align: left;
    }

    .center {
        text-align: center;
    }

    .nowrap {
        white-space: nowrap;
    }

    .uicons {
        height: 60px;
    }

    .uicon {
        width: 36px;
